RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect only the root domain to your login page
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /mtb-login-php/public/login.php [L,R=301]

Options -Indexes

<Files "robots.txt">
    Order allow,deny
    Allow from all
</Files>

